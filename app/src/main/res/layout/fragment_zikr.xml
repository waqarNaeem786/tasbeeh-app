<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dataContainer"
    tools:context=".zikr">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="10dp"
                    android:elevation="140dp"
                    android:gravity="center"
                    android:onClick="alClick"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Alhamdulillah_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_margin="26dp"
                        android:padding="16dp"
                        android:text="33"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Alhamdulillah_zikr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:text="الحمد لله"
                        android:textSize="28sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="10dp"
                    android:elevation="140dp"
                    android:gravity="center"
                    android:onClick="ahClick"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="0dp"
                    >

                    <TextView
                        android:id="@+id/Allahuakbar_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_margin="26dp"
                        android:padding="16dp"
                        android:text="33"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Allahuakbar_zikr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:text="الله أكبر"
                        android:textSize="28sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="10dp"
                    android:elevation="140dp"
                    android:gravity="center"
                    android:onClick="asClick"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Astagfirullah_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:layout_margin="26dp"
                        android:padding="16dp"
                        android:text="33"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Astagfirullah_zikr"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:text="استغفر الله"
                        android:textSize="28sp" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

